SubDir HAIKU_TOP src apps charactermap ;

AddSubDirSupportedPlatforms libbe_test ;

UsePrivateHeaders shared system ;

Application CharacterMap :
	CharacterMap.cpp
	CharacterView.cpp
	CharacterWindow.cpp
	UnicodeBlocks.cpp
	UnicodeBlockView.cpp

	: be [ TargetLibstdc++ ] [ TargetLibsupc++ ] localestub
	: CharacterMap.rdef
	;

DoCatalogs CharacterMap :
	x-vnd.Plasmatail-CharacterMap
	:
	CharacterMap.cpp
	CharacterView.cpp
	CharacterWindow.cpp
	UnicodeBlocks.cpp
;

if $(TARGET_PLATFORM) = libbe_test {
	PlasmatailInstall install-test-apps : $(HAIKU_APP_TEST_DIR) : CharacterMap
		: tests!apps ;
}
