SubDir HAIKU_TOP src tests kits game chart ;

AddSubDirSupportedPlatforms libbe_test ;

Application Chart :
	Chart.cpp
	ChartRender.cpp
	ChartView.cpp
	ChartWindow.cpp
	: be game localestub [ TargetLibstdc++ ] [ TargetLibsupc++ ]
	: Chart.rdef
	;

DoCatalogs Chart :
    x-vnd.Plasmatail-ChartDemo
    :
	Chart.cpp
	ChartWindow.cpp
;

if $(TARGET_PLATFORM) = libbe_test {
	PlasmatailInstall install-test-apps : $(HAIKU_APP_TEST_DIR) : Chart
		: tests!apps ;
}
