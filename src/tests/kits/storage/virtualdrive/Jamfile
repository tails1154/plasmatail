# Installation
PlasmatailInstall install_virtualdrive
	: /boot/home/config/add-ons/kernel/drivers/bin
	: virtualdrive ;
PlasmatailInstallRelSymLink install_virtualdrive
	: /boot/home/config/add-ons/kernel/drivers/dev/misc
	: <installed>virtualdrive
	: installed-symlink ;
