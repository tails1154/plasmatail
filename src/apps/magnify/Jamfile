SubDir HAIKU_TOP src apps magnify ;

AddSubDirSupportedPlatforms libbe_test ;

UsePrivateHeaders shared ;

Application Magnify :
	Magnify.cpp
	: be game localestub [ TargetLibstdc++ ] [ TargetLibsupc++ ] tracker translation
	: Magnify.rdef
;

DoCatalogs Magnify :
	x-vnd.Plasmatail-Magnify
	:
	Magnify.cpp
;

if $(TARGET_PLATFORM) = libbe_test {
	PlasmatailInstall install-test-apps : $(HAIKU_APP_TEST_DIR) : Magnify
		: tests!apps ;
}
