SubDir HAIKU_TOP src add-ons kernel drivers network ether wb840 ;

# set some additional flags
# For ether_driver.h
UsePrivateHeaders net ;

KernelAddon wb840 :
	driver.c
	device.c
	interface.c
	wb840.c
	;


rule Installwb840
{
	Depends $(<) : $(>) ;
}

actions ignore Installwb840
{
	cp $(>) /boot/home/config/add-ons/kernel/drivers/bin/
}

#Installwb840 install : wb840 ;

# Installation

PlasmatailInstall install-networking : /boot/home/config/add-ons/kernel/drivers/bin :
 	wb840
;

PlasmatailInstallRelSymLink install-networking : /boot/home/config/add-ons/kernel/drivers/dev/net :
	<installed>wb840 :
	installed-symlink
;

